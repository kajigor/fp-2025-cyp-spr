test-suite my-megaparsec-project-test
  type: exitcode-stdio-1.0
  main-is: Spec.hs
  other-modules:
      ExpressionSpec
      OptimizerSpec
      OptimizerPropertySpec
      StatementParserSpec
      Paths_my_megaparsec_project
  hs-source-dirs:
      test
  ghc-options: -Wall -Wcompat -Widentities -Wincomplete-record-updates -Wincomplete-uni-patterns -Wmissing-export-lists -Wmissing-home-modules -Wpartial-fields -Wredundant-constraints -threaded -rtsopts -with-rtsopts=-N
  build-depends:
      base >=4.7 && <5
    , containers
    , hspec
    , hspec-megaparsec
    , megaparsec
    , mtl
    , my-megaparsec-project
    , QuickCheck
    , text
  default-language: Haskell2010

executable my-megaparsec-project
  hs-source-dirs:      src
  main-is:             Main.hs
  other-modules:       Expression
                     , Optimizer
                     , Statement
                     , Parser
  default-language:    Haskell2010
  build-depends:
      base >= 4.7 && < 5
    , megaparsec
    , text
    , containers
    , mtl
    , optparse-applicative
  ghc-options:         -Wall
                       -Wcompat
                       -Widentities
                       -Wincomplete-record-updates
                       -Wincomplete-uni-patterns
                       -Wmissing-export-lists
                       -Wmissing-home-modules
                       -Wpartial-fields
                       -Wredundant-constraints