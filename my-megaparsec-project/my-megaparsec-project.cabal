cabal-version:       2.2

name:                my-megaparsec-project
version:             0.1.0.0
description:         Megaparsec project for Haskell FP course
homepage:            https://github.com/githubuser/my-megaparsec-project#readme
license:             BSD-3-Clause
license-file:        LICENSE
author:              Author name here
maintainer:          example@example.com
copyright:           2025 Author name here
category:            Web
build-type:          Simple
extra-source-files:  README.md
                     CHANGELOG.md

library
  exposed-modules:
      Expression
      Optimizer
      Parser
      Statement
  other-modules:
      Paths_my_megaparsec_project
  hs-source-dirs:
      src
  ghc-options: -Wall -Wcompat -Widentities -Wincomplete-record-updates -Wincomplete-uni-patterns -Wmissing-export-lists -Wmissing-home-modules -Wpartial-fields -Wredundant-constraints
  build-depends:
      base >=4.7 && <5
    , containers
    , megaparsec
    , mtl
    , text
  default-language: Haskell2010

